{
  "install": "bundle install",
  "start": "bundle exec rackup config.ru -p $PORT -s thin -o 0.0.0.0",
  "watch": {
    "install": {
      "include": [
        "^glitch\\.json$",
        "^Gemfile.lock",
        "^\\.env$"
      ]
    },
    "restart": {
      "exclude": [
        "^vendor/bundle"
      ],
      "include": [
        ".rb$",
        "views/**/*"
      ]
    },
    "throttle": 1000
  }
}